<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    style="@style/main_background"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">
    <LinearLayout
        android:orientation="vertical"

        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/logo"

            android:scaleType="fitXY"
            android:layout_marginBottom="16dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6.5"
            android:layout_weight="4">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:onClick="onClick"
                android:focusable="true"
                card_view:cardCornerRadius="8dp"
                android:id="@+id/card1"
                card_view:cardElevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="64dp"
                        android:src="@drawable/level"
                        android:layout_height="64dp"
                        android:layout_marginEnd="8dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="3.75"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@string/first_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textStyle="bold"/>
                        <TextView
                            android:text="@string/choose_the_french_synonym_which_match_with_the_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/open_lock"
                        android:layout_gravity="end|bottom"
                        android:layout_height="wrap_content"
                        android:id="@+id/lock1"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:focusable="true"
                card_view:cardCornerRadius="8dp"
                android:id="@+id/card2"
                android:onClick="onClick"
                card_view:cardElevation="8dp"
                android:clickable="true"
                android:background="@android:color/darker_gray"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="64dp"
                        android:src="@drawable/level2"
                        android:layout_height="64dp"
                        android:layout_marginEnd="8dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="3.75"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@string/second_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textStyle="bold"/>
                        <TextView
                            android:text="@string/choose_the_french_synonym_of_the_arabic_word"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/lock"
                        android:layout_gravity="end|bottom"
                        android:layout_height="wrap_content"
                        android:id="@+id/lock2"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:focusable="true"
                android:id="@+id/card3"
                android:onClick="onClick"
                android:background="@android:color/darker_gray"
                card_view:cardCornerRadius="8dp"

                card_view:cardElevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:paddingVertical="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/level3"

                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="8dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="3.75"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@string/third_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textStyle="bold"/>
                        <TextView
                            android:text="@string/writr_the_french_synonym_which_match_with_the_picture_you_can_listen_to_its_spelling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/lock"
                        android:layout_gravity="end|bottom"
                        android:layout_height="wrap_content"
                        android:id="@+id/lock3"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>





        </LinearLayout>

    </LinearLayout>
</RelativeLayout>