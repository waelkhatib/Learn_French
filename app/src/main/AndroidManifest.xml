<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waelalk.learnfrench">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="false"
        android:icon="@drawable/flag"
        android:label="@string/app_name"
        android:roundIcon="@drawable/flag"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.FirstLevelActivity" />
        <activity android:name=".view.SecondLevelActivity" />
        <activity android:name=".view.ThirdLevelActivity"></activity>
    </application>

</manifest>